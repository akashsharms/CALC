<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.akash.calci.MainActivity"
    android:padding="0dp"
    android:background="#060606">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total:"
            android:id="@+id/tv1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffff"
            android:textStyle="normal|bold"
            android:gravity="bottom" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/tv2"
            android:layout_gravity="left|top"
            android:padding="0dp"
            android:background="#413d3d"
            android:textColor="#faf6f6"
            android:textSize="40dp"
            android:gravity="bottom|end"
            android:layout_below="@+id/tv1"
            android:layout_alignEnd="@+id/buttond" />
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="100">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="AC"
        android:id="@+id/buttona"
        android:singleLine="false"
        android:layout_alignTop="@+id/buttona"
        android:layout_toEndOf="@+id/buttona"
        android:background="#326cff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="0"
        android:id="@+id/button0"
        android:layout_below="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:background="#326cff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25"
        android:elevation="@dimen/abc_action_bar_content_inset_material"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="+"
        android:id="@+id/buttonp"
        android:layout_alignTop="@+id/button0"
        android:layout_toEndOf="@+id/button0"
        android:background="#326cff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="/"
        android:id="@+id/buttond"
        android:layout_alignBottom="@+id/buttonp"
        android:layout_alignParentEnd="true"
        android:background="#326cff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="7"
        android:id="@+id/button7"
        android:layout_below="@+id/button0"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:gravity="center"
        android:layout_weight="25"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="8"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button7"
        android:layout_toEndOf="@+id/button7"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:gravity="center"
        android:layout_weight="25"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="9"
        android:id="@+id/button9"
        android:layout_alignBottom="@+id/button8"
        android:layout_toStartOf="@+id/buttond"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:gravity="center"
        android:layout_weight="25"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="x"
        android:id="@+id/buttonm"
        android:layout_below="@+id/buttonp"
        android:layout_alignParentEnd="true"
        android:background="#326cff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25" />
</LinearLayout>
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100">
    <Button

        android:layout_width="wrap_content"
        android:layout_weight="25"
        android:layout_height="match_parent"
        android:text="4"
        android:id="@+id/button4"
        android:layout_below="@+id/button7"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:gravity="center"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="25"
        android:layout_height="match_parent"
        android:text="5"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:gravity="center"
        android:contextClickable="false"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="25"
        android:layout_height="match_parent"
        android:text="6"
        android:id="@+id/button6"
        android:layout_below="@+id/button4"
        android:layout_toStartOf="@+id/button9"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:gravity="center"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_weight="25"
        android:layout_height="match_parent"
        android:text="-"
        android:id="@+id/buttons"
        android:layout_alignTop="@+id/button4"
        android:layout_toStartOf="@+id/button9"
        android:background="#326cff"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:contextClickable="false" />
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:baselineAligned="false"
        android:clickable="true">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1"
        android:id="@+id/button1"
        android:layout_above="@+id/button2"
        android:layout_toStartOf="@+id/buttonm"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25"
        android:gravity="center"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="2"
        android:id="@+id/button2"
        android:layout_below="@+id/button5"
        android:layout_toEndOf="@+id/button2"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:contextClickable="true"
        android:gravity="center"
        android:layout_weight="25"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="3"
        android:id="@+id/button3"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button3"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25"
        android:gravity="center"
        android:contextClickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="="
        android:id="@+id/buttone"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentEnd="true"
        android:background="#fd6f2d"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="normal|bold"
        android:clickable="true"
        android:layout_weight="25"
        android:gravity="center" />
</LinearLayout>
   </LinearLayout>

</FrameLayout>
